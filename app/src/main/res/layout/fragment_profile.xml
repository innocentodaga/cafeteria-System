<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:id="@+id/profile_layout"
    android:background="#DAFFFFFF"
    tools:context=".ProfileFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#AEFF5722"
        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/cat_bg"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_person_24" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@drawable/addtocart"
        android:backgroundTint="#8BC7C8C7"
        >
        <ImageView
            android:id="@+id/firstname_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:src="@drawable/baseline_person_outline_24"
            app:tint="@color/orange" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showfirstname"
            android:layout_alignStart="@id/firstname_icon"
            android:textSize="18sp"
            android:text="Ty$0n"
            android:textColorHint="@color/black"
            android:layout_marginStart="50dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:id="@+id/first_divider"
            android:layout_below="@id/showfirstname"
            android:background="@color/gray"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/lastname_icon"
            android:layout_below="@id/first_divider"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            app:tint="@color/orange"
            android:src="@drawable/baseline_person_outline_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_lastname"
            android:layout_alignStart="@id/lastname_icon"
            android:layout_marginTop="20dp"
            android:layout_below="@id/first_divider"
            android:textSize="18sp"
            android:text="Innocent"
            android:textColorHint="@color/black"
            android:layout_marginStart="50dp"
            />
        <View
            android:id="@+id/second_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/lastname_icon"
            android:background="@color/gray"
            />
        <ImageView
            android:id="@+id/person_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            app:tint="@color/orange"
            android:layout_below="@id/second_divider"
            android:src="@drawable/baseline_person_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showusername"
            android:layout_alignStart="@id/person_icon"
            android:textColorHint="@color/black"
            android:layout_below="@id/second_divider"
            android:textSize="18sp"
            android:text="Ty$0n"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:id="@+id/third_divider"
            android:layout_below="@id/showusername"
            android:background="@color/gray"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/email_icon"
            app:tint="@color/orange"
            android:layout_below="@id/third_divider"
            android:background="@color/white"
            android:src="@drawable/baseline_email_24"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_email"
            android:layout_alignStart="@id/email_icon"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_below="@id/third_divider"
            android:textSize="18sp"
            android:text="tyson@gmail.com"
            android:layout_marginStart="50dp"
            />
        <View
            android:id="@+id/forth_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/show_email"
            android:background="@color/gray"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/usertype_icon"
            android:layout_below="@id/forth_divider"
            android:layout_marginTop="20dp"
            app:tint="@color/orange"
            android:background="@color/white"
            android:src="@drawable/baseline_assignment_ind_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_usertype"
            android:layout_alignStart="@id/usertype_icon"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:layout_below="@id/forth_divider"
            android:textSize="18sp"
            android:text="student"
            android:layout_marginStart="50dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/show_email"
            android:background="@color/gray"
            />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Edit Profile"
        android:textSize="18sp"
        android:backgroundTint="@color/orange"
        android:layout_gravity="center"
        android:id="@+id/edit_profile"
        />
</LinearLayout>
</ScrollView>