<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/burgerbg"
    tools:context=".NewPassword">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/cafe"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/cat_bg"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        >

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:layout_marginTop="6dp"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_below="@id/otp"
            android:textColor="@color/white"
            android:textSize="24sp"
            />
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:layout_marginTop="6dp"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:layout_below="@id/new_password"
            android:textSize="24sp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_email_24"
            android:layout_alignRight="@id/otp"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_lock_24"
            android:layout_alignRight="@id/new_password"
            android:layout_below="@id/otp"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/baseline_lock_24"
            android:layout_alignRight="@id/confirmPassword"
            android:layout_below="@id/new_password"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:layout_below="@id/confirmPassword"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:progressTint="#B5FB5817"
                />
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/progress"
            android:text="Change Password"
            android:layout_marginTop="8dp"
            android:id="@+id/reset"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:backgroundTint="#CBFFFFFF"
            android:background="@drawable/input_login_bg"
            android:layout_centerHorizontal="true"

            />
        </RelativeLayout>
</LinearLayout>