<!-- res/layout/cart_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3CE14412"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cartItemImageView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/coff"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/cartItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/cartItemDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Description"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/cartItemPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/order_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/addtocart"
            android:padding="4dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cartItemRemoveImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        app:tint="#FB1717"
        android:src="@drawable/baseline_remove_circle_24"
        android:layout_gravity="center"/>

</LinearLayout>
